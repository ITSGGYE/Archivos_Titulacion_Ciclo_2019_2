<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="15dp"
    android:layout_height="match_parent"
    tools:context=".vista.DocenteCrudActivity">

    <EditText
        android:id="@+id/crud_nombres_doc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingTop="10dp"
        android:hint="Nombres"/>

    <EditText
            android:id="@+id/crud_apellidos_est"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:paddingTop="10dp"
            android:hint="Apellidos"/>

    <Spinner
        android:id="@+id/crud_sexo_doc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:entries="@array/lstSexo" />

    <EditText
            android:id="@+id/crud_correo_doc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Correo"
            android:inputType="textEmailAddress"
            android:paddingTop="10dp" />

        <EditText
            android:id="@+id/crud_contraseña_doc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Contraseña"
            android:inputType="textPassword"
            android:paddingTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Lista de docentes"
            android:textSize="@dimen/tam_texto_descripcion"
            android:paddingTop="10dp"
            />

        <ListView
            android:id="@+id/lv_datosDocentes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

    </LinearLayout>