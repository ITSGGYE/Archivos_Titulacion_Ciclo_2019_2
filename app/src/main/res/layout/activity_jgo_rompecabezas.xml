<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".memorizacion.RompecabezasActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_puntaje_rom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/tam_texto_descripcion" />

    <ImageView
        android:id="@+id/img_muestra_rom"
        android:layout_width="100dp"
        android:layout_height="100dp"
        />

    <com.tdah_training.controlador.GestureDetectGridView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/grid1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.tdah_training.controlador.GestureDetectGridView>

</LinearLayout>